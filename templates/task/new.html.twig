{% extends 'base.html.twig' %}

{% block title %}Adicionar Nova Tarefa{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center items-center min-h-screen bg-gray-50 p-4">

        <main class="w-full max-w-md bg-white p-8 rounded-lg shadow-xl border border-gray-200">
            <h1 class="text-4xl font-extrabold text-blue-700 mb-6 text-center">Adicionar Nova Tarefa</h1>

            {{ form_start(taskForm, {'attr': {'class': 'space-y-6'}}) }} 

                <div class="mb-4"> 
                    {{ form_label(taskForm.title, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                    {{ form_widget(taskForm.title, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500'}}) }}
                    {{ form_errors(taskForm.title, {'attr': {'class': 'text-red-500 text-xs italic mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(taskForm.description, null, {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                    {{ form_widget(taskForm.description, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500 h-24 resize-y'}}) }}
                    {{ form_errors(taskForm.description, {'attr': {'class': 'text-red-500 text-xs italic mt-1'}}) }}
                </div>

                <div class="mb-6 flex items-center"> 
                    {{ form_widget(taskForm.isCompleted, {'attr': {'class': 'mr-2 leading-tight'}}) }}
                    {{ form_label(taskForm.isCompleted, 'Tarefa Conclu√≠da?', {'label_attr': {'class': 'text-gray-700 text-sm font-bold'}}) }}
                    {{ form_errors(taskForm.isCompleted, {'attr': {'class': 'text-red-500 text-xs italic mt-1'}}) }}
                </div>

                <div class="text-center"> 
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md">
                        Salvar Tarefa
                    </button>
                </div>

            {{ form_end(taskForm) }}

            <div class="mt-6 text-center">
                <a href="{{ path("app_task_index") }}" class="inline-block text-blue-600 hover:text-blue-800 text-sm font-medium transition duration-300 ease-in-out">
                    Voltar para a Lista
                </a>
            </div>
        </main>
    </div>
{% endblock %}